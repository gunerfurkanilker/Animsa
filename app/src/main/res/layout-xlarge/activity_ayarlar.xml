<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".view.AyarlarActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="#FFF"
        android:text="Zorluk Seviyesi"/>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rdoKolay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:textColor="#FFF"
            android:text="Kolay" />

        <RadioButton
            android:id="@+id/rdoOrta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="38sp"
            android:textColor="#FFF"
            android:text="Orta" />

        <RadioButton
            android:id="@+id/rdoZor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="38sp"
            android:textColor="#FFF"
            android:text="Zor" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kolay Seviye"
        android:textSize="42sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:text="- Toplam 20 soru bulunur.\n- En fazla 8 yanlış yapabilirsiniz.\n- Maksimum 2000 puan kazanabilirsiniz."
        android:textSize="32sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:text="Orta Seviye"
        android:textSize="42sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:text="-Toplam 25 soru bulunur.\n- En fazla 8 yanlış yapabilirsiniz.\n- Maksimum 4000 puan kazanabilirsiniz."
        android:textSize="32sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Zor Seviye"
        android:textColor="#FFF"
        android:textSize="42sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:text="- Toplam 30 soru bulunur.\n- En fazla 5 yanlış yapabilirsiniz.\n- Maksimum 6000 puan kazanabilirsiniz"
        android:textSize="32sp"
        />





</LinearLayout>